{
  "manifest_version": 2,
  "name": "NekoTranslate",
  "version": "0.0.2",
  "description": "Translate any manga or comic in place and in real time.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "*://www.nekotranslate.ai/*",
    "*://api.nekotranslate.ai/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "NekoTranslate Settings"
  }
}
