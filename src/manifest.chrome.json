{
  "manifest_version": 3,
  "name": "NekoTranslate",
  "version": "0.0.1",
  "description": "Translate any manga or comic in place and in real time.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://www.nekotranslate.ai/*",
    "*://api.nekotranslate.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png", 
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "NekoTranslate Settings"
  }
}
